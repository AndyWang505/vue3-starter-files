<script>
const App = {
  name: '漂亮的元件',
  data() {
    return {
      num: 0,
    }
  },
  methods: {
    trigger: function() {
      this.num++
    }
  },
  created() {
    this.num = 1;
    console.log(this);
  }
};
Vue.createApp(App).mount('#app');
